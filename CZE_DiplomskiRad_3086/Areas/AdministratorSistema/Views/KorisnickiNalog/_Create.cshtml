@using CZE.Data.Models
@model CZE.Web.Areas.AdministratorSistema.Models.KorisnickiNalogVM


<form ajax-call="da" ajax-update="#modalBodyContent" datatable-id="#osobaDataTable"
      asp-area="AdministratorSistema" asp-controller="KorisnickiNalog" asp-action="Create">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

  <div class="form-group">
    <input asp-for="OsobaId" class="form-control" type="hidden" />
  </div>

  <div class="form-group row">
    <label asp-for="UlogaKorisnika" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
      <select asp-for="UlogaKorisnika" asp-items="@Html.GetEnumSelectList(typeof(UlogeKorisnika))" class="form-control">
        <option></option>
      </select>
    </div>
    <span asp-validation-for="UlogaKorisnika" class="text-danger"></span>
  </div>

  <div class="form-group row">
    <label asp-for="KorisnickoIme" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
      <input asp-for="KorisnickoIme" class="form-control" />
    </div>
    <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
  </div>

  <div class="form-group row">
    <label asp-for="Lozinka" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
      <input asp-for="Lozinka" class="form-control" />
    </div>
    <span asp-validation-for="Lozinka" class="text-danger"></span>
  </div>

  <div class="form-group row">
    <label asp-for="Aktivan" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
      <input asp-for="Aktivan" class="form-control" />
    </div>
    <span asp-validation-for="Aktivan" class="text-danger"></span>
  </div>

  <div class="card">
    <div class="card-header">
      <input asp-for="SendEmail" 
             role="button" aria-expanded="@(Model.SendEmail?"true":"false")" data-toggle='collapse' data-target='#PosaljiEmail' 
             aria-controls="PosaljiEmail" style="font-size: 15px" /> 
      Posalji E-mail sa korisničkim podacima
    </div>
    <div class="collapse @(Model.SendEmail?"show":"")" id="PosaljiEmail">
      <div class="card-body">
        <div class="form-group">
          <textarea asp-for="EmailBody" rows="5" class="form-control" placeholder="Email body"></textarea>
          <span asp-validation-for="EmailBody" class="text-danger"></span>
        </div>
      </div>
    </div>
  </div>


  <br/>
  <div class="form-group">
    <input type="submit" value="Snimi" class="btn btn-default" />
  </div>

</form>