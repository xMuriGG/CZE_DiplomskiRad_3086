@model CZE.Web.Areas.Direktor.Models.ZaposlenikVMs.ZaposlenikVM
<table class="table table-sm">
  <thead>
  <tr>
    <th scope="col" class="w-25"></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <th class="text-info" scope="row">@Html.DisplayNameFor(model => model.StepenObrazovanja)</th>
    <td>@Html.DisplayFor(model => model.StepenObrazovanja)</td>
  </tr>
  <tr>
    <th class="text-info" scope="row">@Html.DisplayNameFor(model => model.BrojLicneKarte)</th>
    <td>@Html.DisplayFor(model => model.BrojLicneKarte)</td>
  </tr>
  <tr>
    <th class="text-info" scope="row">@Html.DisplayNameFor(model => model.BrojRacuna)</th>
    <td>@Html.DisplayFor(model => model.BrojRacuna)</td>
  </tr>
  <tr>
    <th class="text-info" scope="row">Akcije</th>
    <td>
      <a asp-area="Direktor" asp-controller="Zaposlenik" asp-action="Create" asp-route-id="@Model.ZaposlenikId"
         ajax-call="da" ajax-update="#zaposlenikDetails"
         class="btn btn-outline-warning" title="Edit"><span class="fa fa-edit"></span></a>
      <a asp-area="Direktor" asp-controller="Zaposlenik" asp-action="Delete" asp-route-id="@Model.ZaposlenikId"
         ajax-call="da" ajax-update="#modalBodyContent" datatable-id="#osobaDataTable"
         data-toggle="confirmation" data-content="Da li ste sigurni da želite obrisati zaposlenika?"
         class="btn btn-outline-danger" title="Delete"><span class="fa fa-trash"></span></a>
    </td>
  </tr>
  </tbody>
</table>